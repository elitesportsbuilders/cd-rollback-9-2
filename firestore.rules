rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to your data only if the user is authenticated
    // and the userId in the path matches their authenticated UID.
    match /artifacts/{appId}/users/{userId}/{collection=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // You might also want to add rules for other collections if they exist
    // For example, if you have a public collection:
    // match /publicData/{document=**} {
    //   allow read: if true;
    // }
  }
}
